<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".TimerCountDownActivity"
    android:background="@drawable/deneme1"
    >



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="60dp"
        android:gravity="center"
        >



        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick wedding day"
            android:textColor="#B8867D"
            android:textStyle="italic"
            android:textSize="20sp"
            />


        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="#F3DCD8"
            android:textColor="#575555"
            android:layout_marginLeft="20dp"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:text="Wedding Day" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="15dp"
        >

        <TextView
            android:id="@+id/tv2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Pick wedding time"
            android:textColor="#B8867D"
            android:textStyle="italic"
            android:textSize="20sp"
            android:layout_marginLeft="22dp"
            />

        <Button
            android:id="@+id/timeButton"
            android:onClick="popTimePicker"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Wedding Time"
            android:textAllCaps="false"
            android:textSize="20sp"
            android:backgroundTint="#F3DCD8"
            android:textColor="#575555"
            android:layout_marginLeft="19dp"


            />


    </LinearLayout>

    <TextView
        android:id="@+id/text_view_countdown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:00"
        android:layout_marginTop="40dp"
        android:layout_gravity="center"
        android:textColor="#775F5F"
        android:textSize="60sp" />






    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:gravity="center"
        >




        <Button
            android:id="@+id/button_start_pause"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Start"
            android:textSize="15sp"
            android:layout_marginRight="40dp"
            android:textAllCaps="true"
            android:backgroundTint="#F3DCD8"
            android:textColor="#575555"
            />

        <Button
            android:id="@+id/button_reset"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="reset"
            android:textSize="15sp"
            android:backgroundTint="#F3DCD8"
            android:textColor="#575555"
            android:visibility="invisible"
            tools:visibility="visible" />
    </LinearLayout>


    <TextView
        android:id="@+id/textViewtop"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28sp"
        android:layout_gravity="center"
        />

    <TextView
        android:id="@+id/textView"
        android:layout_marginTop="20dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textSize="28sp"
        android:layout_gravity="center"
        />

</LinearLayout>